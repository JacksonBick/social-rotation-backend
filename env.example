# Social Rotation Environment Variables
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/social_rotation_development

# JWT Secret
JWT_SECRET_KEY=your_jwt_secret_key_here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Twitter OAuth
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK=https://my.socialrotation.app/linkedin/callback

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK=https://my.socialrotation.app/google/callback

# TikTok OAuth
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_CALLBACK=https://my.socialrotation.app/tiktok/callback

# YouTube OAuth
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_CALLBACK=https://my.socialrotation.app/youtube/callback

# Platform Callback (for OAuth redirects)
PLATFORM_CALLBACK=https://my.socialrotation.app/platform/callback

# Digital Ocean Spaces (for file storage)
DO_SPACES_KEY=your_digital_ocean_spaces_key
DO_SPACES_SECRET=your_digital_ocean_spaces_secret
DO_SPACES_REGION=your_digital_ocean_spaces_region
DO_SPACES_BUCKET=your_digital_ocean_spaces_bucket
DO_SPACES_ENDPOINT=your_digital_ocean_spaces_endpoint
